# Supabase (required)
# Get these from your Supabase project settings > API
# https://app.supabase.com/project/_/settings/api
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key

# Supabase Admin (required for webhooks - Story 4.x)
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key

# Facebook Messenger (required for Story 4.x)
FACEBOOK_VERIFY_TOKEN=your-verify-token
FACEBOOK_APP_SECRET=your-app-secret
FACEBOOK_APP_ID=your-facebook-app-id
FACEBOOK_OAUTH_REDIRECT_URI=http://localhost:3000/api/auth/facebook/callback

# Encryption (required for Story 4.x token storage)
# Generate with: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
ENCRYPTION_KEY=your-64-character-hex-encryption-key-here-generate-one

# Telegram (required for Story 5.x)
TELEGRAM_BOT_TOKEN=your-telegram-bot-token
